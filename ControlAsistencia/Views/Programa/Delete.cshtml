@{
    ViewData["Title"] = "Eliminar Programa de Formación";
}
@model ControlAsistencia.Models.Programa

<h3>
    ¿Estas Seguro De Borrar Este Programa?
</h3>

<div>
    <hr />
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Version)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Version)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
    </dl>

    <form asp-controller="Programa" asp-action="Delete">
        <input type="hidden" asp-for="ProgramaId" />
        <button type="submit" value="Eliminar" class="btn btn-outline-dark"><i class="far fa-trash-alt" style="color:red;"></i></button> |
        <a asp-action="Index"><i class="fas fa-angle-double-left"></i></a>
    </form>

</div>

